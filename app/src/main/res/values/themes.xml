<resources>
    <!-- Base application theme. -->
    <style name="Theme.InQuiRy" parent="Theme.Material3.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/quantum_orange</item>
        <item name="colorSecondaryVariant">@color/quantum_orange600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#F6E6FF</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.InQuiRy.NoActionBar" parent="Theme.Material3.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">#F6E6FF</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.InQuiRy.AppBarOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="OverflowMenu" parent="Widget.Material3.PopupMenu.Overflow">
        <!-- Required for pre-Lollipop. -->
        <item name="overlapAnchor">false</item>

        <!-- Required for Lollipop. -->
        <item name="android:overlapAnchor">false</item>
    </style>

    <style name="Theme.InQuiRy.PopupOverlay" parent="ThemeOverlay.Material3.Light" />
</resources>
